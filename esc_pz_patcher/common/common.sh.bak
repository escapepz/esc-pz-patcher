#!/bin/bash

# --- CONFIGURATION ---
JAR_NAME="projectzomboid.jar"
BACKUP_NAME="projectzomboid.jar.bak"

# Files to be patched (space separated)
FILES_TO_PATCH=(
    "zombie/radio/ZomboidRadio.class"
    "zombie/iso/WorldStreamer.class"
    "zombie/core/textures/MultiTextureFBO2.class"
    #"zombie/characters/PlayerCraftHistory.class" #b42 only
)

# --- PATH DETECTION ---
# Standard Steam paths for Linux and macOS
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS Path
    DEFAULT_PATH="$HOME/Library/Application Support/Steam/steamapps/common/ProjectZomboid/Project Zomboid.app/Contents/Java"
else
    # Linux Path
    DEFAULT_PATH="$HOME/.local/share/Steam/steamapps/common/ProjectZomboid/projectzomboid"
fi

echo "----------------------------------------------------"
echo "[INFO] Project Zomboid Patcher starting..."

# 1. Locate JAR
if [ -f "./$JAR_NAME" ]; then
    JAR_FILE="./$JAR_NAME"
    BACKUP_FILE="./$BACKUP_NAME"
    echo "[FOUND] $JAR_NAME in current directory."
elif [ -f "$DEFAULT_PATH/$JAR_NAME" ]; then
    JAR_FILE="$DEFAULT_PATH/$JAR_NAME"
    BACKUP_FILE="$DEFAULT_PATH/$BACKUP_NAME"
    echo "[FOUND] Game detected at: $DEFAULT_PATH"
else
    echo "[ERROR] Could not find $JAR_NAME."
    echo "Please place this script in the game folder or ensure Steam is installed in the default location."
    exit 1
fi

# 2. Backup
if [ ! -f "$BACKUP_FILE" ]; then
    echo "[BACKUP] Creating backup..."
    cp "$JAR_FILE" "$BACKUP_FILE"
    echo "[OK] Backup created at $BACKUP_FILE"
else
    echo "[INFO] Backup already exists. Skipping backup step."
fi

# 3. Patching
echo "[PROCESS] Updating JAR..."

# Check if 'zip' is installed
if ! command -v zip &> /dev/null; then
    echo "[ERROR] 'zip' command not found. Please install it (sudo apt install zip)."
    exit 1
fi

for FILE in "${FILES_TO_PATCH[@]}"; do
    if [ -f "$FILE" ]; then
        # -u updates the file within the zip/jar, -f freshens existing entries
        zip -u "$JAR_FILE" "$FILE"
        if [ $? -eq 0 ]; then
            echo "[OK] Patched: $FILE"
        else
            echo "[FAILED] Could not patch: $FILE"
        fi
    else
        echo "[SKIP] Source file not found: $FILE"
    fi
done

echo "----------------------------------------------------"
echo "[SUCCESS] Patching process complete!"
